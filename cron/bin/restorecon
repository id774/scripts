#!/bin/sh

JOBLOG=/var/log/sysadmin/restorecon.log

echo -n "*** $0: Job start at `/bin/hostname` on ">>$JOBLOG 2>&1
date "+%Y/%m/%d %T">>$JOBLOG 2>&1

test -x /root/bin/restorecon.sh && /root/bin/restorecon.sh>>$JOBLOG 2>&1

echo -n "*** $0: End of Job at `/bin/hostname` on ">>$JOBLOG 2>&1
date "+%Y/%m/%d %T">>$JOBLOG 2>&1
echo>>$JOBLOG 2>&1

# ADMIN_MAIL_ADDRESS=xxxxxx@gmail.com
case "$ADMIN_MAIL_ADDRESS" in
  *@*)
    nkf -w $JOBLOG | mail -s "[cron-log][`/bin/hostname`] SELinux Restore Context Log" $ADMIN_MAIL_ADDRESS
    ;;
esac

exit 0
