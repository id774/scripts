defscrollback 10000

defutf8 on
defkanji utf-8
encoding utf-8 utf-8
defencoding utf-8

escape ^Tt
bind ^A escape ^Aa
bind ^B escape ^Bb
bind ^E escape ^Ee
bind ^O escape ^Oo
bind ^V escape ^Vv
bind ^Q escape ^Qq
bind ^W escape ^Ww
bind ^X escape ^Xx
bind ^Y escape ^Yy
bind ^Z escape ^Zz
bind -c REGION 2 split
bind -c REGION 1 only
bind -c REGION 0 remove
bind -c REGION o focus
bind -c REGION ^ resize
bind x command -c REGION

termcap kterm hs@
terminfo kterm hs@
vbell off
bell_msg "Bell in window %"
bind w windowlist -b
hardstatus alwayslastline "%{= wk} %-w%{=bu dr}%n %t%{-}%+w %= %{=b wk}%y/%m/%d %{=b wk}%c"
shell -$SHELL
startup_message off
autodetach on

log off
logfile "$TMP/screen-%Y%m%d-%n.log"
hardcopydir "$TMP"
deflog on
